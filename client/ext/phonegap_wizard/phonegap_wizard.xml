<a:application xmlns:a="http://ajax.org/2005/aml">
	
    <a:window id="winPhonegapWizard"
      onhide="require('ext/phonegap_wizard/phonegap_wizard').onHide()"
      title="PhoneGap Project Creation Wizard"
      buttons="close" 
      modal="false" 
      center="true" 
      width="350" 
      kbclose="true">
      
      <a:vbox edge="10" padding="5">
            <a:hbox align="center">
                <a:label width="95">Project Name</a:label>
                <a:textbox id="txtPWProjectName" flex="1" focusselect="true"/>
            </a:hbox>                
            
<!--            <a:checkbox id="chkIncludeJqm" label="Include jQuery Mobile" /> -->
            
            <a:hbox align="center">
                <a:label width="95">Minimum Version</a:label>
                <a:dropdown id="ddPWMinSdk" flex2="1" autoselect="true" maxitems="10" width="213" height="21">
                    <a:item value="android-7" selected="selected">Android 2.1</a:item>
					<a:item value="android-8">Android 2.2</a:item>
					<a:item value="android-9">Android 2.3</a:item>
					<a:item value="android-11">Android 3.0</a:item>
					<a:item value="android-12">Android 3.1</a:item>
					<a:item value="android-13">Android 3.2</a:item>
					<a:item value="android-15">Android 4.0</a:item>
                </a:dropdown>
            </a:hbox>
            
            <a:hbox align="center">
                <a:label width="95">Project Template</a:label>
                <a:dropdown id="ddPWTemplate" flex2="1" autoselect="true" maxitems="10" width="213" height="21">
                    <a:item value="pgdemo" selected="selected">PhoneGap Demo</a:item>
    				<a:item value="pgdemojQM">PhoneGap Demo with jQuery Mobile</a:item>
                </a:dropdown>
            </a:hbox>
                
            <a:hbox align="center">
                <a:label width="95">Package Name</a:label>
                <a:textbox id="txtPWPackageName" value="com.example.{txtPWProjectName.value}" flex="1"/>
            </a:hbox>           

        </a:vbox>
        <a:divider />
        <a:hbox padding="5" pack="end" edge="10 10 5 10">
            <a:button id="btnPWCreate" default="2" class="ui-btn-green">Create</a:button>
            <a:button onclick="winPhonegapWizard.hide()">Close</a:button>
        </a:hbox>
    </a:window>

</a:application>