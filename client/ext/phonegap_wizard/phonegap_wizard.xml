<a:application xmlns:a="http://ajax.org/2005/aml">
	<a:skin id="phonegap_wizard"
  	src        = "{require('ext/phonegap_wizard/phonegap_wizard').skin}" 
  	media-path = "/static/ext/phonegap_wizard/images/" />
	
    <a:window id="winPhonegapWizard"
      onhide="require('ext/phonegap_wizard/phonegap_wizard').onHide()"
      title="Configure Phonegap Project"
      buttons="close" 
      modal="false" 
      center="true" 
      width="350" 
      kbclose="true">
      
      <a:vbox edge="10" padding="5">
            <a:hbox align="center">
                <a:label width="95">Project Name</a:label>
                <a:textbox id="txtPWProjectName" flex="1" focusselect="true"/>
            </a:hbox>                
             
            <a:hbox align="center"> 
            <a:vbox edge="10" padding="5">
                <a:label>PhoneGap Location</a:label>
                <a:hbox>
                <a:fieldset flex="1">
                    <a:radiobutton group="grpPWConfig" skin="classic" checked="true" value="builtin" label="Use Built-in PhoneGap - version 0.9.4" />
                    <a:radiobutton group="grpPWConfig" skin="classic" checked="true" value="builtin" label="Enter PhoneGap GitHub location" />
                    <a:radiobutton group="grpPWConfig" skin="classic" checked="false" value="choose" label="Enter path to PhoneGap zipfile" />
                </a:fieldset>
                </a:hbox>
                <a:hbox  >
                <input id="inpPWPgFile" type="file" visible="{grpPWConfig.value == 'choose'}" />
                </a:hbox>
            </a:vbox>
            </a:hbox>

            <a:hbox align="center">
                <a:label width="95">Build Target</a:label>
                <a:dropdown id="ddSFPatterns" flex2="1" autoselect="true" maxitems="10" width="213" height="21">
                    <a:item value="all">All known filetypes</a:item>
                    <a:item value="actionscript">Actionscript files</a:item>
                    <a:item value="xml">XML files</a:item>
                </a:dropdown>
            </a:hbox>
            
                <a:hbox align="center">
                    <a:label width="95">Application Name</a:label>
                    <a:textbox id="txtPWAppName" value='foo' flex="1"/>
                </a:hbox>
                
                <a:hbox align="center">
                    <a:label width="95">Package Name</a:label>
                    <a:textbox id="txtPWPackageName" value="com.{grpPWConfig.value}" flex="1"/>
                </a:hbox>
                <a:hbox align="center">
                    <a:label width="95">Create Activity</a:label>
                    <a:textbox id="txtPWActivity" value="act{document.getElementById('inpPWPgFile').value}" flex="1"/>
                </a:hbox>             

        </a:vbox>
        <a:divider />
        <a:hbox padding="5" pack="end" edge="10 10 5 10">
            <a:button id="btnPWCreate" default="2" class="ui-btn-green">Create</a:button>
            <a:button onclick="winPhonegapWizard.hide()">Close</a:button>
        </a:hbox>
    </a:window>

</a:application>