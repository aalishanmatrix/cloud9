<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:window id="winSettings"
      skin      = "fm-window"
	  class		= "unselectable"
      title     = "Preferences"
      flex      = "1"
      modal     = "false"
      model     = "{require('ext/settings/settings').model}"
      optimize  = "true">
        <a:hbox
          anchors  = "0 0 0 0"
          overflow = "hidden">
            <a:bar id="barSettings" skinset="prefs" skin="bar-preferences" flex="1">
            </a:bar>
            <a:scrollbar
                for      = "barSettings"
                margin   = "2"
                skin     = "sbios"
                width    = "7"
                overflow = "auto"
            />
        </a:hbox>
    </a:window>
</a:application>