<a:application xmlns:a="http://ajax.org/2005/aml">
	<a:skin id="android_wizard"
  	src        = "{require('ext/android_wizard/android_wizard').skin}" 
  	media-path = "/static/ext/android_wizard/images/" />
	
    <a:window id="winAndroidWizard"
      onhide="require('ext/android_wizard/android_wizard').onHide()"
      title="Configure Android Project"
      buttons="close" 
      modal="false" 
      center="true" 
      width="350" 
      kbclose="true">
        <a:vbox edge="10" padding="5">
            <a:hbox align="center">
                <a:label width="95">Project Name</a:label>
                <a:textbox id="txtAWProjectName" flex="1" focusselect="true"/>
            </a:hbox>                
            
                  <a:hbox edge="10" padding="5">
            <a:fieldset flex="1" caption="Contents">
                <a:radiobutton group="grpAWContents" skin="classic" checked="true" value="projects" label="Create New Project" />
                <a:radiobutton group="grpAWContents" skin="classic" checked="false" value="selection" label="Create From Existing Source" />
                <a:radiobutton group="grpAWContents" skin="classic" checked="false" value="sample" label="Create From Sample" />
            </a:fieldset>
                    </a:hbox>
                    
                    
            <a:hbox align="center">
                <a:label width="95">Build Target</a:label>
                <a:dropdown id="ddAWTarget" flex2="1" autoselect="true" maxitems="10" width="213" height="21">
                    <a:item value="4">Android 2.2</a:item> <!-- values from android list targets -->
                    <a:item value="5">Android 2.3</a:item>
                    <a:item value="6">Android 3.0</a:item>
                </a:dropdown>
            </a:hbox>
            
            <a:hbox align="center">
                <a:label width="95">Application Name</a:label>
                <a:textbox id="txtAWAppName" value='app_{txtAWProjectName.value}' flex="1"/>
            </a:hbox>
                
            <a:hbox align="center">
                <a:label width="95">Package Name</a:label>
                <a:textbox id="txtAWPackageName" value="com.example.{txtAWProjectName.value}" flex="1"/>
            </a:hbox>
            
            <a:hbox align="center">
                <a:label width="95">Create Activity</a:label>
                <a:textbox id="txtAWActivity" value="activity_{txtAWProjectName.value}" flex="1"/>
  <!--                  <a:textbox id="txtPWActivity" value="activy{document.getElementById('inpPWPgFile').value}" flex="1"/>/-->
            </a:hbox>        
                
            <a:hbox align="center">
                <a:label width="95">Min SDK Version</a:label>
                <a:textbox id="txtAWMinSDK" flex="1"/>
            </a:hbox>                

        </a:vbox>
        <a:divider />
        <a:hbox padding="5" pack="end" edge="10 10 5 10">
            <a:button id="btnAWCreate" default="2" class="ui-btn-green">Create</a:button>
            <a:button onclick="winAndroidWizard.hide()">Close</a:button>
        </a:hbox>
    </a:window>

</a:application>